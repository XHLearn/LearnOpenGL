{
    // 有关 tasks.json 格式的文档，请参见
    // https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [{
            "label": "Build",
            "command": "g++",
            "args": [
                "-std=c++11",
                "${file}",
                "-o",
                "a.out",
                "glad.c",
                "lib/libglfw3.a",
                "-Iincludes",
                "-Iincludes/love",
                "-Iincludes/others",
                "-lX11",
                "-lpthread",
                "-ldl",
            ],
            "type": "shell",

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./a.out",
            "dependsOn": ["Build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}